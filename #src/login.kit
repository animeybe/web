<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/static/login.css">
    <title>Document</title>
</head>
<body>
    <!--@import "header.html"-->

    <div class="sign">
        <div class="sign-window">
            <div class="sign-title">Sign In</div>
            <form action="" method="post"  novalidate>
                {{ form.hidden_tag() }}
                <div class="sign-username">
                    {{ form.username.label }}<br>
                    {{ form.username(size=32) }}<br>
                    {% for error in form.username.errors %}
                    <span style="color: red;">[{{ error }}]</span>
                    {% endfor %}
                </div>
                <div class="sign-password">
                    {{ form.password.label }}<br>
                    {{ form.password(size=32) }}<br>
                    {% for error in form.password.errors %}
                    <span style="color: red;">[{{ error }}]</span>
                    {% endfor %}
                </div>
                <div class="sign-remember">{{ form.remember_me() }} {{ form.remember_me.label }}</div>
                <div class="sign-btn">{{ form.submit() }}</div>
                <p>New User? <a href="{{ url_for('register') }}">Click to Register!</a></p>
            </form>
        </div>
    </div>

    <!--@import "footer.html"-->
</body>
</html>